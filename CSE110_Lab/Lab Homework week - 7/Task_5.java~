import java.util.Scanner;
public class Task_5 
{
  
  
  public static void main(String[] args)
  { 
    Scanner sc= new Scanner(System.in);
    int num = sc.nextInt();
    int space = num-1;
    
    for(int i=1; i<=num; i++)
    {
      for(int k=space; k>0; k--)
      {
        System.out.print(" ");
      }
      space--;
      int h=2*i-1;
      for(int j=1; j<=h; j++)
      {
        System.out.print(j);
      }
      System.out.println();
    }
  } 
}
