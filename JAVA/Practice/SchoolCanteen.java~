import java.util.Scanner;
public class SchoolCanteen {
  
  
  public static void main(String[] args) { 
    Scanner sc = new Scanner(System.in);
    int len = sc.nextInt();
    int t = sc.nextInt();
    String std = sc.nextLine().toUpperCase();
    String out ="";
    //System.out.println(stds);
    for(int i=0; i<len-1; i++){
      char sch = std.charAt(i);
      for(int j=i+1; t>0 && j<len-1; j++){
        char sch2 = std.charAt(j);
        if(sch=='B'&& sch2=='G' && j<len-1){
          out+=sch2+sch;
        }
        else{
          out+=sch+sch2;
        }
        t--;
      }
    }
    System.out.println(out);
  }
  
  /* ADD YOUR CODE HERE */
  
}
